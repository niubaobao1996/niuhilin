/**index.wxss**/
page{
  background: #e8e8e8;
}
.lunbor{
  width: 100%;
  height: 150px;
}
.lunbor swiper-item,.lunbor swiper-item image{
  width: 100%;
}

/*******主题盒子*******/
.box{
padding: 1em;
background: #ffffff;
margin-top: 1em;
}
.box .box-title{
display: flex;
flex-direction: row;
justify-content: space-between;
align-items: flex-end;
}
.box .box-title text{
  font-size: 25px;
}
.see-all{
  font-size: 16px;
  color: #666;
  vertical-align: bottom;
}
.see-all image{
  width: 1em;
  height: 1em;
  vertical-align: middle;
}
.class_list{
  white-space: nowrap;
}
.class_list ._class{
display: inline-block;
width: 190px;
border-radius: 20px;
margin: 1em 0.5em;
}
.class_list ._class:first-child{
  margin-left: 0;

}